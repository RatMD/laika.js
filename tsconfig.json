{
    "compilerOptions": {
        "target": "ES2022",
        "module": "ESNext",
        "moduleResolution": "Bundler",
        "lib": ["ES2022", "DOM"],
        "rootDir": "src",
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "skipLibCheck": true,
        "sourceMap": true,
        "exactOptionalPropertyTypes": true,
        "strictNullChecks": true,
        "noUncheckedIndexedAccess": true,
        "baseUrl": ".",
        "stripInternal": true
    },
    "include": [
        "src/**/*"
    ]
}
